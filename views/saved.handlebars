<div class="card rounded">
    <div class="card-header">
        <a href='{{this.link}}'>{{this.title}}</a>
    </div>
    <div class="card-body">
        <p>{{this.summary}}</p>
        <br>
        <p class="card-text">click the button to Delete</p>
        <button data-id='{{this._id}}' class="btn btn-info delete-article">Delete Article</button>
    </div>
